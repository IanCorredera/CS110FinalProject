Deck Class */

import java.util.ArrayList;   // Needed for ArrayList class

public class Deck
{
   // Fields
   public ArrayList<Card> gameDeck;
   
   /**
   Constructor sets number of cards in deck
   @param deck the deck size
   */
   public Deck()
   {
        
      // Create ArrayList for deck
      gameDeck = new ArrayList<Card>();
   }
   
   // Method gets first card an removes it from ArrayList
   public Card getCard()
   {
      return gameDeck.remove(0);
      
   }
   
   // Method adds cards to bottom of pile
   public void addCard(Card card)
   {
      gameDeck.add(card);
   }
}
